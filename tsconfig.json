{
	"compilerOptions": {
		"target": "es2022",
		"module": "ESNext",
		"baseUrl": ".",
		"rootDir": ".",
		"outDir": "./build",
		"declaration": true,
		"allowJs": true,
		"paths": {
			"@taskchain/*": ["./src/*"]
		},
		"noEmit": false,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"noImplicitAny": false,
		"skipLibCheck": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
